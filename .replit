[[workflows.workflow]]
name = "Setup Wine and Xvfb"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash setup_wine.sh"

[[workflows.workflow]]
name = "Run Headless Simulation"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_headless.py"

[[workflows.workflow]]
name = "Run Headless Prototype"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python headless_prototype.py"

[[workflows.workflow]]
name = "Setup Headless Windows"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash setup_headless_windows.sh"

[[workflows.workflow]]
name = "Setup Headless Replit"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash setup_headless_replit.sh"

[[workflows.workflow]]
name = "Make run_all.sh executable"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x run_all.sh"

[[workflows.workflow]]
name = "Web Application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 8080

[deployment]
run = ["sh", "-c", "python run_headless.py"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 8080
externalPort = 80
